<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Inicio" >

    <TextView
        android:id="@+id/lblEquiponro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:text="@string/Titulo"
        android:textSize="@dimen/Titulo" />

    <Button
        android:id="@+id/btnCanteqselec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:onClick="IngresarDatos"
        android:text="@string/btnSiguiente" />

    <Spinner
        android:id="@+id/spnCantdeeq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCanteqselec"
        android:layout_below="@+id/lblNombrecamp"
        android:layout_marginTop="44dp" />

    <TextView
        android:id="@+id/lblNombrecamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spnCantdeeq"
        android:layout_centerVertical="true"
        android:text="@string/lblNombre" />

    <EditText
        android:id="@+id/txtNombrecamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblNombrecamp"
        android:layout_alignBottom="@+id/lblNombrecamp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/lblNombrecamp"
        android:ems="10" >

        <requestFocus />
    </EditText>

</RelativeLayout>
